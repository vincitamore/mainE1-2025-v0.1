{
  "name": "codemind-agent",
  "displayName": "CodeMind AI Agent",
  "description": "Hierarchical multi-agent code intelligence",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codemind-sidebar",
          "title": "CodeMind Orchestrator",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "codemind-sidebar": [
        {
          "type": "webview",
          "id": "codemind.chatView",
          "name": "Chat",
          "contextualTitle": "CodeMind Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "codemind.inlineEdit",
        "title": "CodeMind: Edit Code",
        "when": "editorHasSelection"
      },
      {
        "command": "codemind.reviewCode",
        "title": "CodeMind: Review Code"
      },
      {
        "command": "codemind.openChat",
        "title": "CodeMind: Open Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "keybindings": [
      {
        "command": "codemind.inlineEdit",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "CodeMind",
      "properties": {
        "codemind.openrouter.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API Key"
        },
        "codemind.openrouter.model": {
          "type": "string",
          "default": "x-ai/grok-beta",
          "description": "OpenRouter model to use"
        },
        "codemind.qualityThreshold": {
          "type": "number",
          "default": 9,
          "minimum": 0,
          "maximum": 10,
          "description": "Quality threshold for N2 loop"
        },
        "codemind.maxIterations": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum iterations for N2 self-correction loop"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "marked": "^11.1.1"
  }
}
